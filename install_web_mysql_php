# install apache mysql php and php-modules
apt install apache2
apt install mariadb-server
apt install php7.0
apt install apache-php
apt install rewrite
apt install php-mysql
apt install php7.0-xml
apt install php7.0-sqlite3
 
# Enable modules
a2enmod rewrite
 
# restart apache
service apache2 reload
apache2ctl configtest
 
# Apache apache2.conf:
#   AllowOverride All